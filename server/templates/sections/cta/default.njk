<section class="cta">
  <div class="container">
    {% if heading %}
    <h2 class="cta__heading">{{ heading }}</h2>
    {% endif %}
    {% if description %}
    <p class="cta__description">{{ description }}</p>
    {% endif %}
    {% if buttonText and buttonLink %}
    {% set normalizedLink = buttonLink | normalizeLink %}
    {% if normalizedLink %}
    <a href="{{ normalizedLink.href }}" class="cta__button">{{ buttonText }}</a>
    {% endif %}
    {% endif %}
  </div>
</section>
