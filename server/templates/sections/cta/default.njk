{% set displayHeading = heading or "Ready to Get Started?" %}
{% set displayDescription = description or "Join us today and experience the difference" %}
{% set displayButtonText = buttonText or "Get Started" %}
{% set displayButtonLink = buttonLink or "#" %}

<section class="cta">
  <div class="container">
    <h2 class="cta__heading">{{ displayHeading }}</h2>
    <p class="cta__description">{{ displayDescription }}</p>
    {% set normalizedLink = displayButtonLink | normalizeLink %}
    {% if normalizedLink %}
    <a href="{{ normalizedLink.href }}" class="cta__button">{{ displayButtonText }}</a>
    {% endif %}
  </div>
</section>
