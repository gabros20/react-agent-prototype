{# Footer Section - Site footer with navigation and copyright #}

<footer class="footer">
  <div class="container">
    <div class="footer__inner">
      {# Navigation Links #}
      {% if globalNavItems and globalNavItems.length > 0 %}
        <nav class="footer__nav" aria-label="Footer navigation">
          <ul class="footer__nav-list">
            {% for item in globalNavItems %}
              {% if item.visible and (item.location == "footer" or item.location == "both") %}
                <li class="footer__nav-item">
                  <a href="{{ item.href }}" class="footer__nav-link">{{ item.label }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>
      {% endif %}

      {# Legal Links #}
      <div class="footer__legal">
        <a href="/privacy" class="footer__legal-link">Privacy Policy</a>
        <span class="footer__separator" aria-hidden="true">|</span>
        <a href="/terms" class="footer__legal-link">Terms of Service</a>
      </div>

      {# Copyright #}
      <div class="footer__copyright">
        <p>&copy; {{ currentYear }} {{ companyName or "Company Name" }}. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>
