{# Single Blog Post Template #}

<article class="post">
  <div class="container">
    <div class="post__content">
      {# Post Header #}
      <header class="post__header">
        {# Category Badge #}
        {% if category %}
          <div class="post__category">
            <span class="post__category-badge">{{ category }}</span>
          </div>
        {% endif %}

        {# Title #}
        <h1 class="post__title">{{ title }}</h1>

        {# Excerpt #}
        {% if excerpt %}
          <p class="post__excerpt">{{ excerpt }}</p>
        {% endif %}

        {# Meta Information #}
        <div class="post__meta">
          {% if author %}
            <span class="post__author">By {{ author }}</span>
          {% endif %}

          {% if publishedAt %}
            <span class="post__date">
              <time datetime="{{ publishedAt }}">
                {{ publishedAt | date("MMMM D, YYYY") }}
              </time>
            </span>
          {% endif %}
        </div>
      </header>

      {# Featured Image #}
      {% if featuredImage %}
        <div class="post__featured-image">
          <img
            src="{{ featuredImage }}"
            alt="{{ title }}"
            class="post__image"
          >
        </div>
      {% elif cover and cover.url %}
        <div class="post__featured-image">
          <img
            src="{{ cover.url }}"
            alt="{{ cover.alt or title }}"
            class="post__image"
          >
        </div>
      {% endif %}

      {# Post Body #}
      <div class="post__body">
        {% if body %}
          {{ body | markdown | safe }}
        {% else %}
          <p>No content available.</p>
        {% endif %}
      </div>

      {# Tags #}
      {% if tags and tags.length > 0 %}
        <div class="post__tags">
          <h3 class="post__tags-title">Tags:</h3>
          <ul class="post__tags-list">
            {% for tag in tags %}
              <li class="post__tag">
                <span class="post__tag-text">{{ tag }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</article>

