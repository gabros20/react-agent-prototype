{# Blog Listing Template - Shows all published blog posts #}

<div class="blog-list">
  <div class="container">
    {# Page Header #}
    <header class="blog-list__header">
      <h1 class="blog-list__title">{{ collectionName or "Blog" }}</h1>
      {% if collectionDescription %}
        <p class="blog-list__description">{{ collectionDescription }}</p>
      {% endif %}
    </header>

    {# Posts Grid #}
    {% if posts and posts.length > 0 %}
      <div class="blog-list__grid">
        {% for post in posts %}
          <article class="blog-card">
            {# Featured Image #}
            {% if post.featuredImage %}
              <a href="/posts/blog/{{ post.slug }}?locale={{ locale }}" class="blog-card__image-link">
                <div class="blog-card__image">
                  <img
                    src="{{ post.featuredImage }}"
                    alt="{{ post.title }}"
                    class="blog-card__img"
                  >
                </div>
              </a>
            {% elif post.content and post.content.cover and post.content.cover.url %}
              <a href="/posts/blog/{{ post.slug }}?locale={{ locale }}" class="blog-card__image-link">
                <div class="blog-card__image">
                  <img
                    src="{{ post.content.cover.url }}"
                    alt="{{ post.content.cover.alt or post.title }}"
                    class="blog-card__img"
                  >
                </div>
              </a>
            {% else %}
              <a href="/posts/blog/{{ post.slug }}?locale={{ locale }}" class="blog-card__image-link">
                <div class="blog-card__image blog-card__image--placeholder">
                  <svg class="blog-card__placeholder-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              </a>
            {% endif %}

            {# Post Content #}
            <div class="blog-card__content">
              {# Category Badge #}
              {% if post.category %}
                <div class="blog-card__category">
                  <span class="blog-card__category-badge">{{ post.category }}</span>
                </div>
              {% endif %}

              {# Title #}
              <h2 class="blog-card__title">
                <a href="/posts/blog/{{ post.slug }}?locale={{ locale }}" class="blog-card__title-link">
                  {{ post.title }}
                </a>
              </h2>

              {# Excerpt #}
              {% if post.excerpt %}
                <p class="blog-card__excerpt">{{ post.excerpt | truncate(150) }}</p>
              {% elif post.content and post.content.body %}
                <p class="blog-card__excerpt">{{ post.content.body | truncate(150) }}</p>
              {% endif %}

              {# Meta #}
              <div class="blog-card__meta">
                {% if post.author %}
                  <span class="blog-card__author">By {{ post.author }}</span>
                {% endif %}

                {% if post.publishedAt %}
                  <span class="blog-card__date">
                    <time datetime="{{ post.publishedAt }}">
                      {{ post.publishedAt | date("MMM D, YYYY") }}
                    </time>
                  </span>
                {% endif %}
              </div>

              {# Read More Link #}
              <a href="/posts/blog/{{ post.slug }}?locale={{ locale }}" class="blog-card__link">
                Read More â†’
              </a>
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      {# Empty State #}
      <div class="blog-list__empty">
        <svg class="blog-list__empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h2 class="blog-list__empty-title">No posts yet</h2>
        <p class="blog-list__empty-text">Check back soon for new content!</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
