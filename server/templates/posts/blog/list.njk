  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.blog-card {
  background-color: white;
  border-radius: 0.5rem;
  overflow: hidden;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  transition: transform 0.2s, box-shadow 0.2s;
}

.blog-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.blog-card__image-link {
  display: block;
}

.blog-card__image {
  width: 100%;
  height: 240px;
  overflow: hidden;
  background-color: #e5e7eb;
}

.blog-card__image--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.blog-card__placeholder-icon {
  width: 4rem;
  height: 4rem;
  color: #9ca3af;
}

.blog-card__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.2s;
}

.blog-card:hover .blog-card__img {
  transform: scale(1.05);
}

.blog-card__content {
  padding: 1.5rem;
}

.blog-card__category {
  margin-bottom: 0.75rem;
}

.blog-card__category-badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  background-color: #3b82f6;
  color: white;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.blog-card__title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
  line-height: 1.3;
}

.blog-card__title-link {
  color: #111827;
  text-decoration: none;
  transition: color 0.2s;
}

.blog-card__title-link:hover {
  color: #3b82f6;
}

.blog-card__excerpt {
  font-size: 1rem;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 1rem;
}

.blog-card__meta {
  display: flex;
  gap: 1rem;
  align-items: center;
  font-size: 0.875rem;
  color: #9ca3af;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #e5e7eb;
}

.blog-card__author {
  font-weight: 500;
}

.blog-card__link {
  display: inline-flex;
  align-items: center;
  color: #3b82f6;
  font-weight: 600;
  font-size: 0.875rem;
  text-decoration: none;
  transition: color 0.2s;
}

.blog-card__link:hover {
  color: #2563eb;
}

.blog-list__empty {
  text-align: center;
  padding: 4rem 2rem;
}

.blog-list__empty-icon {
  width: 5rem;
  height: 5rem;
  color: #d1d5db;
  margin: 0 auto 1.5rem;
}

.blog-list__empty-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #374151;
  margin-bottom: 0.5rem;
}

.blog-list__empty-text {
  font-size: 1rem;
  color: #6b7280;
}

@media (max-width: 768px) {
  .blog-list__title {
    font-size: 2rem;
  }

  .blog-list__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .blog-card__meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}
</style>
