  padding: 4rem 0;
  background-color: #f9fafb;
  min-height: 60vh;
}

.blog-list__header {
  text-align: center;
  margin-bottom: 4rem;
}

.blog-list__title {
  font-size: 3rem;
  font-weight: 700;
  color: #111827;
  margin-bottom: 1rem;
}

